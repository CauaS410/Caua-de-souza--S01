#include <iostream>
#include <string>

using namespace std;

class MonstroSombrio {
protected:
    string nome;

public:
    MonstroSombrio(string nome) : nome(nome) {}
    virtual ~MonstroSombrio() {}

    virtual void Mover() = 0;
};

class Zumbi : public MonstroSombrio {
public:
    Zumbi(string nome) : MonstroSombrio(nome) {}

    void Mover() override {
        cout << nome << " se arrasta lentamente pelo chão." << endl;
    }
};

class Espectro : public MonstroSombrio {
public:
    Espectro(string nome) : MonstroSombrio(nome) {}

    void Mover() override {
        cout << nome << " flutua rapidamente pelo ar." << endl;
    }
};

int main() {
    const int tamanhoDaHorda = 2;
    MonstroSombrio* horda[tamanhoDaHorda];

    horda[0] = new Zumbi("Zumbi Lento");
    horda[1] = new Espectro("Espectro Rápido");

    cout << "A horda sombria avança!" << endl;
    for (int i = 0; i < tamanhoDaHorda; ++i) {
        horda[i]->Mover();
    }

    for (int i = 0; i < tamanhoDaHorda; ++i) {
        delete horda[i];
    }

    return 0;
}
