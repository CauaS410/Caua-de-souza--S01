INPUT "Digite a primeira nota: ", N1
INPUT "Digite a segunda nota: ", N2


MEDIA = (N1 + N2) / 2
PRINT "A sua media inicial e: "; MEDIA
PRINT "" ' 


IF MEDIA > 60 THEN
    PRINT "Resultado: Aprovado direto"


ELSEIF MEDIA < 30 THEN
    PRINT "Resultado: Reprovado direto"


ELSE
    PRINT "Voce ficou para a avaliacao NP3."
    INPUT "Digite a nota da NP3: ", NP3

   
    NOVA_MEDIA = (MEDIA + NP3) / 2
    PRINT "A sua nova media e: "; NOVA_MEDIA
    PRINT ""

   
    IF NOVA_MEDIA > 50 THEN
        PRINT "Resultado: Aprovado pela NP3"
    ELSE
        PRINT "Resultado: Reprovado na NP3"
    END IF
END IF


END
